---
import { getLangFromUrl } from "src/i18n/utils";
interface Props {
  title: string;
}
const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico?v=2024-1" />
    <link rel="icon" href="/favicon.svg?v=2024" />
    <link rel="stylesheet" href="/style/assets/fonts.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
